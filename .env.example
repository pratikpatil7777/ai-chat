# Runtime configuration for the Aperture Data Fabric Next.js app
# Copy this file to .env.local and populate with real credentials before running locally.

# --- Auth.js Azure AD configuration ---
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=
# Comma separated list of tenant IDs allowed to sign in
AZURE_AD_ALLOWED_TENANTS=
# Set to 1 to enable email/password fallback auth (scaffold only)
ENABLE_LOCAL_AUTH=false

# --- Auth.js session settings ---
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# --- Stripe configuration ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# --- Observability ---
SENTRY_DSN=

# --- Feature flags / module registration ---
FEATURE_FLAGS=filter,cleanse,visualize,governance

# --- Misc ---
# Update when using an alternative API base URL for RTK Query
API_BASE_URL=http://localhost:3000
